<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <LinearLayout
        android:id="@+id/su_load_more_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleSmall"
            android:layout_marginRight="4dp"/>

        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/brvah_loading"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/su_load_more_load_fail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_gravity="center"
        android:text="@string/brvah_load_failed"/>


    <TextView
        android:id="@+id/su_load_more_load_complete_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="@string/brvah_load_complete"
        android:textColor="@android:color/darker_gray"/>


    <TextView
        android:id="@+id/su_load_more_load_end_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/brvah_load_end"
        android:textColor="@android:color/darker_gray"/>
</FrameLayout>